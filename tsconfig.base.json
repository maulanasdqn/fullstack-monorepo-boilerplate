        "libs/mobile/components/atoms/src/index.ts"
      ],
      "@fmb/mobile-components-molecules": [
        "libs/mobile/components/molecules/src/index.ts"
      ],
      "@fmb/mobile-components-organisms": [
        "libs/mobile/components/organisms/src/index.ts"
      ],
      "@fmb/mobile-components-templates": [
        "libs/mobile/components/templates/src/index.ts"
      ],
      "@fmb/mobile-modules": ["libs/mobile/modules/src/index.ts"],
      "@fmb/mobile-providers": ["libs/mobile/providers/src/index.ts"],
      "@fmb/server-trpc": ["libs/server/trpc/src/index.ts"],
      "@fmb/web-components-atoms": ["libs/web/components/atoms/src/index.ts"],
      "@fmb/web-components-atoms/server": [
        "libs/web/components/atoms/src/server.ts"
      ],
      "@fmb/web-components-molecules": [
        "libs/web/components/molecules/src/index.ts"
      ],
      "@fmb/web-components-molecules/server": [
        "libs/web/components/molecules/src/server.ts"
