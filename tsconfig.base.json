      "@fmb/web-components-organisms": [
        "libs/web/components/organisms/src/index.ts"
      ],
      "@fmb/web-components-organisms/server": [
        "libs/web/components/organisms/src/server.ts"
      ],
      "@fmb/web-components-templates": [
        "libs/web/components/templates/src/index.ts"
      ],
      "@fmb/web-components-templates/server": [
        "libs/web/components/templates/src/server.ts"
      ],
      "@fmb/web-modules": ["libs/web/modules/src/index.ts"],
      "@fmb/web-modules/server": ["libs/web/modules/src/server.ts"],
      "@fmb/web-providers": ["libs/web/providers/src/index.ts"],
      "@fmb/web-providers/server": ["libs/web/providers/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
